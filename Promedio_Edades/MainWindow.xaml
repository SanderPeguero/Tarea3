<Window x:Class="Promedio_Edades.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Promedio_Edades"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

         <StackPanel Margin="16" Orientation="Vertical">
            <TextBlock text="Edad: "/>
            <TextBox x:Name="EdadTextBox" Text=""/>
            <StackPanel Margin="0,16,0,16" Orientation="Horizontal" HorizontalAlignment="Center">
                 <Button Content="ProcesarButton" Click="Procesar"/>
                  <Button Content="AgregarEdadButton" Click="AgregarEdad"/>
             </StackPanel>
         </StackPanel>

    </Grid>
</Window>
