<Window x:Class="Calcular_Exponencial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calcular_Exponencial"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel Margin="16" Orientation="Vertical">
            <TextBlock Text="Numero: "/>
            <TextBox x:Name="Numero" Text=""/>
            <TextBlock Text="Exponente: "/>
            <TextBox x:Name="Exponente" Text=""/>
            <StackPanel Margin="0,16,0,16" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="CALCULAR" Click="Calcular"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
